apiVersion: v1
kind: Service
metadata:
  name: coder-service
spec:
  selector:
    app: coder
  ports:
    - name: coder-port
      port: 80
      targetPort: 80
      protocol: TCP
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: coder
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: coder-workspace-perms
rules:
  - apiGroups: [""]
    resources: ["pods"]
    verbs: ["*"]
  - apiGroups: [""]
    resources: ["persistentvolumeclaims"]
    verbs: ["*"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: coder
subjects:
  - kind: ServiceAccount
    name: coder
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: coder-workspace-perms
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: coder
  labels:
    app: coder
spec:
  replicas: 1
  selector:
    matchLabels:
      app: coder
  template:
    metadata:
      labels:
        app: coder
    spec:
      serviceAccountName: coder
      restartPolicy: Always
      terminationGracePeriodSeconds: 60
      containers:
        - name: coder
          image: "ghcr.io/coder/coder:v0.8.15"
          imagePullPolicy: Always
          env:
            - name: CODER_ADDRESS
              value: "0.0.0.0:80"

            - name: CODER_ACCESS_URL
              value: "https://code.ocf.berkeley.edu"

            - name: CODER_PG_CONNECTION_URL
              valueFrom:
                secretKeyRef:
                  name: coder-config
                  key: POSTGRES_URL

            - name: CODER_OIDC_ISSUER_URL
              valueFrom:
                secretKeyRef:
                  name: coder-config
                  key: CODER_OIDC_ISSUER_URL

            - name: CODER_OIDC_EMAIL_DOMAIN
              valueFrom:
                secretKeyRef:
                  name: coder-config
                  key: CODER_OIDC_EMAIL_DOMAIN

            - name: CODER_OIDC_CLIENT_ID
              valueFrom:
                secretKeyRef:
                  name: coder-config
                  key: CODER_OIDC_CLIENT_ID

            - name: CODER_OIDC_CLIENT_SECRET
              valueFrom:
                secretKeyRef:
                  name: coder-config
                  key: CODER_OIDC_CLIENT_SECRET
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          readinessProbe:
            httpGet:
              path: /api/v2/buildinfo
              port: http
              scheme: HTTP
          livenessProbe:
            httpGet:
              path: /api/v2/buildinfo
              port: http
              scheme: HTTP
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: code.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: coder-service
              servicePort: 80
